<!-- This is a config file with as many configuration options being set
     as possible, to test validation as much we can.
     -->
<collector id="Test Overwrite crawlerDefaults">

  <crawlerDefaults>
    <numThreads>1</numThreads>
    <workDir>defaultWorkdir</workDir>
    <referenceFilters>
      <filter class="com.norconex.collector.core.filter.impl.ExtensionReferenceFilter"
          onMatch="exclude" caseSensitive="true">defaultFilter</filter>
    </referenceFilters>
    <importer>
      <preParseHandlers>
        <handler class="com.norconex.importer.handler.transformer.impl.ReplaceTransformer">
          <replace><valueMatcher>A</valueMatcher><toValue>B</toValue></replace>
        </handler>  
      </preParseHandlers>
      <postParseHandlers>
        <handler class="com.norconex.importer.handler.transformer.impl.ReplaceTransformer">
          <replace><valueMatcher>C</valueMatcher><toValue>D</toValue></replace>
        </handler>  
      </postParseHandlers>    
    </importer>
    <committer class="com.norconex.committer.core.impl.FileSystemCommitter">
      <directory>defaultCommitter</directory>
    </committer>
  </crawlerDefaults>

  <crawlers>

    <crawler id="myCrawlerA">
      <numThreads>22</numThreads>
      <workDir>crawlAWorkdir</workDir>
      <referenceFilters>
        <filter class="com.norconex.collector.core.filter.impl.ExtensionReferenceFilter"
            onMatch="exclude" caseSensitive="true">crawlAFilter</filter>
      </referenceFilters>
      <importer>
        <preParseHandlers>
          <handler class="com.norconex.importer.handler.transformer.impl.ReplaceTransformer">
            <replace><valueMatcher>E</valueMatcher><toValue>F</toValue></replace>
          </handler>  
        </preParseHandlers>
      </importer>
      <committer class="com.norconex.committer.core.impl.FileSystemCommitter">
        <directory>crawlACommitter</directory>
      </committer>
    </crawler>

    <crawler id="myCrawlerB">
    </crawler>

  </crawlers>
</collector>